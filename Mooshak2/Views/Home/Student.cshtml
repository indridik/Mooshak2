@model List<Mooshak2.Models.ViewModels.CourseViewModel>
@{
    ViewBag.Title = "Welcome to Mooshak 2.0";
}
@{ 
    string a = User.Identity.Name.ToString();
    int symbol = a.IndexOf('@');
    string b = a;
    if(symbol != -1)
    {
        b = a.Substring(0, symbol);
    }
}

<div class="page-header">
    <h1>Welcome, @b !</h1>
</div>
<form method="POST" id="courseForm">
<select class="form-control" id="courses" name="courses">
    <option>Choose a course</option>
    @if(Model.Count == 0)
    {
        <p>You are not registered in any courses. Contact your teacher!</p>
    }
    @foreach(var course in Model)
    {
        <option name="@course.ID" id="@course.ID">@course.name</option>
    }
</select>
</form>
<style>
    #assignments {
        margin-top: 20%;
        font-size: 30px;
    }
</style>
<br />
<br/>
<div class="resize">
    <div class="list-group">

    </div>
 </div>

